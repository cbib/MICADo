rule process_sample:
	input: fastq="data/fastq/FLT3/{SAMPLE}.fastq"
	output: "output/alterations/{SAMPLE}.tsv"
	log: "output/logs/{SAMPLE}.txt"
	shell:
		"""
			python src/principal.py --samplekey {wildcards.SAMPLE} --fastq {input.fastq} --fasta data/reference/NM_004119.2.fasta --snp data/reference/snp_FLT3.tab --experiment FLT3 --kmer_length 30 --results output/{wildcards.SAMPLE}.json --disable_cycle_breaking > {output} 2> {log}
		"""

sam2test = open("data/FLT3_samples2analyse.txt",'r').readlines()
sam2test = map(str.strip, sam2test)

rule some_samples:
	input: expand("output/alterations/{SAMPLE}.tsv",SAMPLE=sam2test)
